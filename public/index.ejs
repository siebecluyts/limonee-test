<h2>Je badges</h2>
<div id="badges"></div>

<script>
const badgeNames = {
  citroenezoeker: "Citroenezoeker Badge",
  geheimepagina: "Geheime Pagina Badge",
  admin: "Limonee-Admin Badge",
  reviewer: "Reviewer Badge",
  besteller: "Bestel Badge",
  limonemailer: "LimoneMailer Badge",
  limonekenner: "LimoneKenner Badge"
};

const badges = JSON.parse(localStorage.getItem("badges")) || [];
const badgeDiv = document.getElementById("badges");

if (badges.length === 0) {
  badgeDiv.innerHTML = "<p>Je hebt nog geen badges gevonden!</p>";
} else {
  badges.forEach(naam => {
    if (!badgeNames[naam]) return;

    const badge = document.createElement("div");
    badge.className = `badge badge-${naam}`;
    badge.innerHTML = `
      <a href="/badges/?badge=${naam}">
        <div class="badge-icon"></div>
        <p>${badgeNames[naam]}</p>
      </a>
    `;
    badgeDiv.appendChild(badge);
  });
}

function submitReview() {
  const status = document.getElementById("status");
  status.textContent = "Bedankt voor je review! üéâ Je hebt de reviewer Badge gekregen.";

  let badges = JSON.parse(localStorage.getItem("badges")) || [];
  if (!badges.includes("reviewer")) {
    badges.push("reviewer");
    localStorage.setItem("badges", JSON.stringify(badges));
  }
}
</script>


