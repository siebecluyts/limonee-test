<script>
  const searchInput = document.getElementById("searchInput");
  const personen = document.querySelectorAll(".personen > .Persoon");

  searchInput.addEventListener("input", function () {
    const filter = this.value.toLowerCase();
    let found = false;

    personen.forEach(persoon => {
      const naam = persoon.textContent.toLowerCase();
      const beschrijving = persoon.nextElementSibling;

      if (naam.includes(filter)) {
        persoon.style.display = "";
        if (beschrijving && beschrijving.tagName === "P") {
          beschrijving.style.display = "";
        }
        found = true;
      } else {
        persoon.style.display = "none";
        if (beschrijving && beschrijving.tagName === "P") {
          beschrijving.style.display = "none";
        }
      }
    });

    const noResults = document.getElementById("noResults");
    if (noResults) {
      noResults.style.display = found ? "none" : "block";
    }
  });
</script>

