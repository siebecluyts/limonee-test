    <script src="../../script.js"></script>
    <script src="https://formspree.io/js/formbutton-v1.min.js" defer></script>
    
    <script>
        const openDays = ["27 04 2025"]; // Formaat: DD MM JJJJ

        const agendaList = document.getElementById("agenda-list");

        function generateAgenda() {
            agendaList.innerHTML = ""; // Eerst lijst leegmaken

            openDays.forEach(dateStr => {
                const dateParts = dateStr.split(" "); // Opsplitsen
                const date = new Date(`${dateParts[2]}-${dateParts[1]}-${dateParts[0]}`); // JJJJ-MM-DD formaat

                if (!isNaN(date.getTime())) { // Check of de datum geldig is
                    const listItem = document.createElement("li");
                    listItem.textContent = `${date.toLocaleDateString("nl-NL", { 
                        weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' 
                    })} - Wij zijn open van 14:15 tot 16:30 in Kortenaken, Krawatenstraat 21`;

                    listItem.classList.add("open");
                    agendaList.appendChild(listItem);
                } else {
                    console.error("Ongeldige datum:", dateStr);
                }
            });
        }

        generateAgenda();
    </script>

